# Nakama Environment Variables for Tower Game
# Copy this to .env and change passwords for production

# Database
POSTGRES_DB=nakama
POSTGRES_USER=nakama
POSTGRES_PASSWORD=tower_db_password_CHANGE_ME

# Nakama Server
NAKAMA_NAME=tower-game-server
NAKAMA_LOG_LEVEL=INFO

# Session tokens
NAKAMA_SESSION_TOKEN_EXPIRY_SEC=7200
NAKAMA_SESSION_REFRESH_TOKEN_EXPIRY_SEC=604800

# Matchmaker
NAKAMA_MATCHMAKER_MAX_TICKETS=100
NAKAMA_MATCHMAKER_INTERVAL_SEC=5

# Tower Game specific
TOWER_SEED=42
MAX_FLOOR=1000
PLAYERS_PER_FLOOR=50

# Console
CONSOLE_USERNAME=admin
CONSOLE_PASSWORD=tower_admin_CHANGE_ME
